<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_map">

    <fragment
        android:id="@+id/nav_map"
        android:name="fin.locator.droid.ui.fragment.map.MapFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_details"
        android:name="fin.locator.droid.ui.fragment.details.DetailsFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_details" />

    <fragment
        android:id="@+id/nav_location"
        android:name="fin.locator.droid.ui.fragment.location.LocationFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />
</navigation>